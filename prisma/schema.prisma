generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// Footer and content models
model ContactInfo {
  id            Int     @id @default(1)
  officeName    String
  address1      String
  address2      String?
  cityPostal    String
  locationLabel String
  locationUrl   String?
}

enum ContactType {
  PHONE
  EMAIL
  WHATSAPP
}

model ContactMethod {
  id    Int         @id @default(autoincrement())
  type  ContactType
  label String
  value String
}

model SocialLink {
  id     Int    @id @default(autoincrement())
  label  String
  handle String?
  url    String
  icon   String?
  order  Int    @default(0)
}

model QuickLink {
  id    Int    @id @default(autoincrement())
  label String
  url   String
  order Int    @default(0)
}

model PolicyLink {
  id    Int    @id @default(autoincrement())
  label String
  url   String
  order Int    @default(0)
}

model News {
  id        Int      @id @default(autoincrement())
  title     String
  date      DateTime
  category  String
  imageUrl  String?
  url       String?
  featured  Boolean  @default(false)
}

// Auth & additional homepage content
model User {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  name         String
  passwordHash String
  role         String   @default("user") // e.g. 'admin', 'editor', 'user'
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Promo {
  id         Int      @id @default(autoincrement())
  title      String
  imageUrl   String
  periodFrom DateTime
  periodTo   DateTime
  url        String?
  featured   Boolean  @default(false)
  createdAt  DateTime @default(now())
}

model CarouselSlide {
  id        Int     @id @default(autoincrement())
  title     String?
  imageUrl  String
  href      String?
  order     Int     @default(0)
  createdAt DateTime @default(now())
}

model CurrencyRate {
  id        Int      @id @default(autoincrement())
  code      String
  buy       Float
  sell      Float
  flagSrc   String?
  updatedAt DateTime  @default(now())
}
